<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/on"
        android:state_pressed="true">
        <bitmap
            android:src="@drawable/keep_state_4"/>
    </item>

    <item
        android:id="@+id/off">
        <bitmap
            android:src="@drawable/keep_state_0"/>
    </item>

    <transition
        android:fromId="@id/on"
        android:toId="@id/off"
        android:drawable="@drawable/keep_trans_release">
    </transition>

    <transition
        android:fromId="@id/off"
        android:toId="@id/on"
        android:drawable="@drawable/keep_trans_press">
    </transition>

</animated-selector>